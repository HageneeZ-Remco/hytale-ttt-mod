@CustomLabelStyle = LabelStyle(
  FontSize: 14,
  TextColor: #bfcdd5,
  RenderBold: false,
  VerticalAlignment: Center
);

@CustomLabelStyleWithHorizontalAlignment = LabelStyle(
  FontSize: 14,
  TextColor: #bfcdd5,
  RenderBold: false,
  HorizontalAlignment: Center,
  VerticalAlignment: Center
);

Group #row {
    LayoutMode: Left;
    Anchor: (Bottom: 5, Horizontal: 1);
    Label #LostInCombatLabel {
      Style: (@CustomLabelStyle);
      Anchor: (Horizontal: 1);
      Text: "Muerto confirmado";
    }
}
